<section class="container">
  <div class="row">
    <div class="col-lg-7 col-12 content mx-auto border rounded p-3">
    <h1 class="h3 text-center"><%= t('.new_transfer') %></h1>
      <%= form_with model: @transfer do |form| %>
      <table class="form-group w-100">
        <div class=" d-flex justify-content-between">
          <div>
            <%= form.select(:currency_id, @currencies, {},  { :class => "form-control form-control-lg" }) %>
          </div>
          <div class=" d-flex">
            <div style="width: 50px; display: flex; justify-content: center; align-items: center; margin-right: 5px;">
            <%= form.label :amount, t('.amount') %>
            </div>
            <%= form.number_field :amount, class: "form-control" %>
          </div>
        </div>
        <div class="d-flex mt-5">
          <div class="w-25 d-flex align-items-center">
            <%= form.label :target, t('.target_address') %>
          </div>
          <div class="w-75 ">
            <%= form.text_area :target ,class: "w-100 form-control"%>
          </div>
        </div>
      </table>
        <%= form.submit 'transfer', class: 'btn btn-warning w-100' %>
      <% end %>
    </div>
  </div>
</section>


