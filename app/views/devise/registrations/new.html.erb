<style>
.sign_up{
  width: 80%;
  margin: auto;
  border-radius: 5px;
}
.container_box{
  padding: 10px;
}
</style>

<div class="container">
  
  <h2 class=" pt-3 text-center">建立您的帳戶</h2>

<div class="sign_up bg-white">
  <div class="container_box">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-row">  
        <div class="col-md-6">
            <%= f.label :last_name ,"姓氏"%><br />
            <%= f.text_field :last_name, class: "w-95"%>
          </div>
          <div class="col-md-6">
            <%= f.label :first_name,"名字" %><br />
            <%= f.text_field :first_name, class: "w-95" %>
          </div>
    </div> 
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"col-11 " %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password",class:"col-11 " %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"col-11 " %>
    </div>

    <div class="actions">
      <%= f.submit "創建帳戶",class:"btn btn-primary" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
  </div> 
  </div>
</div>
