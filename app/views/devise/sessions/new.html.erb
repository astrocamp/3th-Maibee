<div class="col-md-4 col-12 mx-auto">
  <h2 class=" pt-3 pb-3 text-center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email,class: 'mt-3' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"col-12 form-control" %>
  </div>

  <div class="field">
    <%= f.label :password ,class: 'mt-3'%><br />
    <%= f.password_field :password, autocomplete: "current-password",class:"col-12 form-control" %>
  </div>
  <div class="mt-3 d-flex " style="justify-content: space-between !important;">
    <% if devise_mapping.rememberable? %>
      <div class="field d-block">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

      <div class="actions d-block">
        <%= f.submit "Log in", class: 'btn btn-primary w-100'%>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
