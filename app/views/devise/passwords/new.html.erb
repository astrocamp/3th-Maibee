<div class="col-md-4 col-12 mx-auto">
  <h2 class=" pt-3 pb-3 text-center"><%= t('.forgot_your_password') %></h2>
  <span>本功能尚未開放使用</span>
    <div class="sign_up bg-white p-3 border rounded h-100">
      <div class="container_box">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"col-12 form-control" %>
          </div>

          <div class="actions mt-3">
            <%= f.submit t('.send_me_reset_password_instructions'),class:"btn btn-primary w-100" %>
          </div>
        <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
