<div class="col-12 mx-auto">
  <%= render 'shared/notice'%>
  <%= form_with url: markets_path, remote: true do |f|%>
    <div class="d-flex justify-content-between">
      <%= f.select(:currency_id, currencies, {},  { :class => 'btn btn-warning' }) %>
      <div class="d-flex">
        <span class="mr-3">account balance</span>
        <div class="account_balance overflow-auto">
          <table>
        <% account_balance.each do |b|%>
          <% if b.currency[:name] == "HoneyPoint"%>
          <% else %>
            <tr>
              <td><%= b.currency[:name] %></td>
              <td><%= b.amount %></td>
            </tr>
          <% end %>
        <% end %>
          </table>
        </div>
      </div>
    </div>
    <%= f.number_field :amount, step: :any,class:"col-12 form-control mt-3",placeholder:"#{t('.amount')}"%>
    <%= f.number_field :sell_price, step: :any,class:"col-12 form-control mt-3",placeholder:"#{t('.sell_price')}"%>
    <%= f.submit "送出", class:"btn btn-primary w-100 mt-3" %>
  <% end %>
</div>