<header class="bg-light">
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to 'Maibee', root_path,class:'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to 'Home', root_path, class:'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Prices', exchanges_path, class:'nav-link' %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Invite friends</a>
          </li>
        </ul>
        <ul class="navbar-nav">
          <% if user_signed_in?%>
            <li class="nav-item">
              <%= link_to 'Wallet', wallets_path,class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to edit_user_registration_path, class: "nav-link" do%>
               <%= current_user.first_name%>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to record_path(current_user.id),method: "patch" , class: "nav-link" do%>
              (<%= current_user.unread%>) 
              <% end %>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Notification</a>
            </li>
            <li class="nav-item">
              <%= link_to "Log out", destroy_user_session_path, method: 'delete', class: "btn btn-primary" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary"%>
            </li>
            <li class="nav-item">
              <%= link_to "Log in", new_user_session_path, class: "btn btn-primary"%>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>
