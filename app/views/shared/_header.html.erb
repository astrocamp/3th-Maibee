<header class="bg-light">
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to root_path,class:'navbar-brand' do %>
        <%= image_pack_tag 'media/images/favicon.png' ,class: "logo" %>
        Maibee
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to t('.dashboard'), dashboard_index_path, class:'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to t('.buy_and_sell'), exchanges_path, class:'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to t('.market'), markets_path, class:'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to invite_friend_index_path, class: 'nav-link' do %>
              <%= t('.invite_friends') %><span class="badge badge-warning"><%= t('.earn_up_to') %> 20HP</span>
            <% end %>
          </li>
        </ul>
        <ul class="navbar-nav">
          <% if user_signed_in?%>
            <li class="nav-item">
              <%= link_to t('.wallet'), wallets_path,class: 'nav-link' %>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-bell"></i>
                <%= current_user.unread%>
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to t('.clear'), record_path(current_user),method: "patch" , class: "dropdown-item" %>
              <div class="dropdown-divider"></div>
              <% @records.each do |record| %>
                <div class="dropdown-item d-flex">
                <%= link_to record.content, '#', class: "nav-link" %>
                <%= link_to '#', class: "nav-link ml-auto" do %>
                  <i class="far fa-window-close"></i>
                <% end %>
                </div>
              <% end %>
              <div class="dropdown-divider"></div>
              <%= link_to t('.all_notifications'), record_path(current_user),method: "patch" , class: "dropdown-item" %>
              </div>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-user"></i>
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <%= link_to edit_user_registration_path, class: "dropdown-item" do%>
                  <%= current_user.email%>
                <% end %>
                <div class="dropdown-divider"></div>
                <%= link_to t('.orders'), orders_path, class: 'dropdown-item' %>
                <%= link_to t('.transfers'), transfers_path, class: 'dropdown-item' %>
                <%= link_to t('.log_out'), destroy_user_session_path, method: 'delete', class: "dropdown-item" %>
              </div>
            </li>


          <% else %>

            <li class="nav-item">
              <%= link_to t('.sign_up'), new_user_registration_path, class: "nav-link"%>
            </li>

            <li class="nav-item">
              <%= link_to t('.log_in'), new_user_session_path, class: "nav-link"%>
            </li>

          <% end %>

        </ul>
      </div>
    </nav>
  </div>
</header>
