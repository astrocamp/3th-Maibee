<style>
.overflow-auto{
  height: 75vh;
}
</style>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-12 mx-auto">
      <h1 class="h4"><%= t('.Maibee_Market') %></h1>
      <%= render 'shared/limit_order_link'%>
      <div class="overflow-auto">
        <table class="table">
          <thead>
            <tr>
              <td><%= t('.currency') %></td>
              <td><%= t('.amount') %></td>
              <td><%= t('.sell_price') %></td>
              <td><%= t('.total_price') %></td>
              <td><%= t('.order_number')%></td>
              <td></td>
            </tr>
          </thead>  
          <tbody> 
            <tbody class="table" id="new_order"></tbody>
            <% @limit_orders.each do |order|%>
              <tr id="market<%= order.id%>">
                <% if order.currency[:name] == "Bitcoin"%>
                  <td style="display:flex;">
                    <img class="currency_image" src="https://dynamic-assets.coinbase.com/e785e0181f1a23a30d9476038d9be91e9f6c63959b538eabbc51a1abc8898940383291eede695c3b8dfaa1829a9b57f5a2d0a16b0523580346c6b8fab67af14b/asset_icons/b57ac673f06a4b0338a596817eb0a50ce16e2059f327dc117744449a47915cb2.png">
                    <%= order.currency[:name] %>
                  </td>
                <% elsif order.currency[:name] == "Dogecoin"%>
                  <td>
                    <%= order.currency[:name] %>
                    <img class="currency_image" src="https://assets.coingecko.com/coins/images/5/small/dogecoin.png?1547792256">
                  </td>
                  <% elsif order.currency[:name] == "Litecoin"%>
                  <td>
                    <img class="currency_image" src="https://dynamic-assets.coinbase.com/f018870b721574ef7f269b9fd91b36042dc05ebed4ae9dcdc340a1bae5b359e8760a8c224bc99466db704d10a3e23cf1f4cd1ff6f647340c4c9c899a9e6595cd/asset_icons/984a4fe2ba5b2c325c06e4c2f3ba3f1c1fef1f157edb3b8ebbfe234340a157a5.png">
                    <%= order.currency[:name] %>
                  </td>
                  <% elsif order.currency[:name] == "炒作幣"%>
                  <td>
                    <img class="currency_image" src="http://163.20.160.14/~word/uploads/photos/19163.gif">
                    <%= order.currency[:name] %>
                  </td>
                  <% else %>
                  <td>
                    <%= order.currency[:name] %>
                  </td>
                  <% end %>
                <td><%= order.amount%></td>
                <td><%= order.sell_price%></td>
                <td><%= order.price%></td>
                <td><%= order.num%></td>
                <% if order.user_id == current_user.id%>
                <td><%=t('.my_order')%></td>
                <% else %>
                <td><%= link_to t('.buy'), bit_market_path(order.id), method: 'post'%></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  
    <div class="col-md-6 col-12 mx-auto vh-100 overflow-auto">
    </div>
  </div>
</div>
