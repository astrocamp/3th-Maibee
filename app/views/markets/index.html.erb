<div class="container">
  <div class="col-lg-8 mx-auto">
    <h1>Maibee Market</h1>
      
    <table class="table">
      <thead>
        <tr>
          <td>幣別</td>
          <td>數量</td>
          <td>單價</td>
          <td>總價</td>
          <td></td>
        </tr>
      </thead>  
      <tbody> 
        <% @limit_orders.each do |order|%>
          <tr>
            <td><%= order.currency[:name]%></td>
            <td><%= order.amount%></td>
            <td><%= order.sell_price%></td>
            <td><%= order.price%></td>
            <% if order.user_id == current_user.id%>
            <td>My Orders</td>
            <% else %>
            <td><%= link_to "Buy", bit_market_path(order.id), method: 'post'%></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= render 'shared/limit_order_link'%>
  </div>
</div>