<div class="container">
  <div class="col-lg-8 mx-auto">
    <h1 class="h4">Maibee Market</h1>
      
    <table class="table">
      <thead>
        <tr>
          <td><%= t('.currency') %></td>
          <td><%= t('.amount') %></td>
          <td><%= t('.sell_price') %></td>
          <td><%= t('.total_price') %></td>
          <td><%= t('.order_number')%></td>
          <td></td>
        </tr>
      </thead>  
      <tbody> 
        <% @limit_orders.each do |order|%>
          <tr>
            <td><%= order.currency[:name]%></td>
            <td><%= order.amount%></td>
            <td><%= order.sell_price%></td>
            <td><%= order.price%></td>
            <td><%= order.num%></td>
            <% if order.user_id == current_user.id%>
            <td><%=t('.my_order')%></td>
            <% else %>
            <td><%= link_to t('.buy'), bit_market_path(order.id), method: 'post'%></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= render 'shared/limit_order_link'%>
  </div>
</div>
