<div class="col-12 col-lg-10 text-center mx-auto">
  <div class="card">
    <h2 class="h4"><%= t('.order_details') %></h2>
    <table class="table table-striped">
      <tbody>
        <tr><th><%= t('.order_number') %></td> <td><%= @order.number %></td></tr>
        <tr><th><%= t('.created_date') %></td> <td><%= @order.created_at %></td></tr>
        <tr><th><%= t('.amount') %></td> <td><%= @order.amount %></td></tr>
        <tr><th><%= t('.deal_price') %></td> <td><%= @order.price %></td></tr>
        <tr><th><%= t('.total_price') %></td> <td><%= @order.price * @order.amount %></td></tr>
        <tr>
          <th><%= t('.status') %></td>
          <td>
            <%= @order.state %> <%= link_to 'Pay now', pay_order_path(@order), method: 'post', class: 'btn btn-primary btn-sm' if @order.state == 'unpaid'%>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
