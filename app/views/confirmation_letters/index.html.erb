<div class="col-md-4 col-6 mx-auto">
  
<% if current_user.first_name != nil && current_user.last_name != nil %>
<div class="text-center">
  <%= render 'shared/notice'%>
  <%= link_to "Get Varify Link", edit_confirmation_letter_path(current_user), class: 'btn btn-primary'%>
</div>
<% else %>
<h2 class=" pt-3 pb-3 text-center">Validate</h2>
<%= render 'shared/notice'%>
  <div class="sign_up bg-white p-3 border rounded h-100">
    <div class="container_box">
    <%= form_with(url: "/confirmation_letters/upgrade", method: "post") do%>
      <div class="form-group">
      <%= text_field_tag :first_name,"",class:"col-12 form-control", placeholder:"First Name"%>
    </div>
      <div class="form-group">
      <%= text_field_tag :last_name,"",class:"col-12 form-control", placeholder:"Last Name"%>
    </div>
      <%= submit_tag "Varify Now",class: "btn btn-primary w-100 "%>
    <% end %>
    </div>
  </div>
<% end %>
  <div class="text-center">
    <%= link_to "go back to dashboard", root_path%>
  </div>
</div>
