<div class="container">
  <h1 class="h3"><%= t('.name') %><%= @currency.name %></h1>
  <ul>
    <li><%= t('.current_prices') %>: <%= @currency.last_rate %></li>
    <li><%= t('.account_balance') %>: <%= @amount %></li>
  </ul>
  <%= form_with model: @order do |form| %>
    <%= form.select(:currency_id, @currencies) %>
    <%= form.label :amount %>
    <%= form.number_field :amount ,in: [0..@amount], step: 0.0001%>
    <%= form.hidden_field :sell, value: 'true' %>
    <%= form.submit %>
  <% end %>
</div>

